{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src/",
    "paths": {
      "components": ["src/components"],
      "config": ["src/config"],
      "core": ["src/core"],
      "data": ["src/data"],
      "hooks": ["src/hooks"],
      "lib": ["src/lib"],
      "store": ["src/store"],
      "utils": ["src/utils"],
      "views": ["src/views"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
, "scripts/buildUtils.js"  ],
  "exclude": [
    "node_modules"
  ]
}
